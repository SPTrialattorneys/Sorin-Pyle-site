<section class="section">
    <div class="container-large max-width-xl">
        <!-- Breadcrumbs -->
        <nav aria-label="Breadcrumb" class="margin-bottom-sm">
            <ol style="list-style: none; padding: 0; display: flex; gap: 0.5rem; font-size: 0.9rem;">
                <li><a href="/index.html" style="color: var(--primary-blue); text-decoration: none;">Home</a></li>
                <li aria-hidden="true">›</li>
                <li><a href="/faq.html" style="color: var(--primary-blue); text-decoration: none;">Client Resources</a></li>
                <li aria-hidden="true">›</li>
                <li aria-current="page" style="color: var(--text-color);">Firm News</li>
            </ol>
        </nav>

        <h1 class="text-align-center margin-bottom-md">Firm News & Updates</h1>
        <p class="text-align-center sub-headline margin-bottom-lg">Stay informed about Sorin & Pyle community involvement, pro bono work, and legal updates.</p>

        {# Category Filter #}
        <div class="blog-category-filter margin-bottom-lg text-align-center" style="display: flex; gap: 0.75rem; justify-content: center; flex-wrap: wrap;">
            <button class="category-filter-btn active" data-category="all" style="padding: 0.5rem 1rem; border: 2px solid var(--primary-blue); background: var(--primary-blue); color: white; border-radius: 20px; cursor: pointer; font-weight: 500;">All</button>
            <button class="category-filter-btn" data-category="community" style="padding: 0.5rem 1rem; border: 2px solid #28a745; background: transparent; color: #28a745; border-radius: 20px; cursor: pointer; font-weight: 500;">Community</button>
            <button class="category-filter-btn" data-category="legal" style="padding: 0.5rem 1rem; border: 2px solid var(--primary-blue); background: transparent; color: var(--primary-blue); border-radius: 20px; cursor: pointer; font-weight: 500;">Legal</button>
            <button class="category-filter-btn" data-category="michigan" style="padding: 0.5rem 1rem; border: 2px solid #6f42c1; background: transparent; color: #6f42c1; border-radius: 20px; cursor: pointer; font-weight: 500;">Michigan Law</button>
            <button class="category-filter-btn" data-category="case" style="padding: 0.5rem 1rem; border: 2px solid #fd7e14; background: transparent; color: #fd7e14; border-radius: 20px; cursor: pointer; font-weight: 500;">Case Analysis</button>
        </div>

        {# Blog Posts #}
        {% if collections.posts.length > 0 %}
            {% for post in collections.posts %}
            <article class="blog-post margin-bottom-xl" data-category="{{ post.data.category | lower }}">
                <h2>
                    <a href="{{ post.url }}" style="color: inherit; text-decoration: none;">
                        {{ post.data.title }}
                    </a>
                </h2>

                <p class="blog-date">
                    <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
                    {% if post.data.category %}
                        <span class="blog-category blog-category-{{ post.data.category | lower }}">{{ post.data.category }}</span>
                    {% endif %}
                </p>

                {% if authors[post.data.author] %}
                <p class="blog-byline">
                    By
                    {% if authors[post.data.author].schemaType == "Person" %}
                        <a href="{{ authors[post.data.author].profileUrl }}">{{ authors[post.data.author].name }}</a>
                    {% else %}
                        {{ authors[post.data.author].name }}
                    {% endif %}
                </p>
                {% endif %}

                {% if post.data.featuredImage %}
                <a href="{{ post.url }}">
                    <picture>
                        <source srcset="{{ post.data.featuredImage }}" type="image/avif">
                        <img src="{{ post.data.featuredImage }}"
                             alt="{{ post.data.featuredImageAlt | default(post.data.title) }}"
                             class="blog-image"
                             width="800"
                             height="600"
                             loading="lazy">
                    </picture>
                </a>
                {% endif %}

                <div class="blog-excerpt margin-top-md">
                    {% if post.data.description %}
                        <p>{{ post.data.description }}</p>
                    {% else %}
                        {{ post.templateContent | striptags | truncate(200) }}
                    {% endif %}
                </div>

                <a href="{{ post.url }}" class="btn-secondary margin-top-md" style="display: inline-block;">
                    Read Full Article &rarr;
                </a>

                {% if not loop.last %}
                <hr style="margin: 3rem 0; border: none; border-top: 1px solid rgba(0,0,0,0.1);">
                {% endif %}
            </article>
            {% endfor %}
        {% else %}
            <div class="text-align-center margin-top-xl margin-bottom-xl">
                <p style="font-size: 1.2rem; color: #666;">No posts yet. Check back soon for updates!</p>
            </div>
        {% endif %}

        <!-- CTA Section -->
        <div class="text-align-center margin-top-xl padding-top-lg" style="background: linear-gradient(135deg, rgba(64, 118, 180, 0.05) 0%, rgba(64, 118, 180, 0.02) 100%); border-radius: var(--border-radius-card); padding: var(--spacing-lg);">
            <h2 class="margin-bottom-sm">Need Legal Assistance?</h2>
            <p class="margin-bottom-md">Contact us for a free consultation to discuss your criminal defense needs.</p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="/contact.html" class="button-primary">Get Free Consultation</a>
                <a href="tel:+16162273303" class="button-secondary track-phone-click" data-event-label="blog_cta">(616) 227-3303</a>
            </div>
        </div>

        <div class="legal-disclaimer margin-top-lg text-align-center" style="font-size: 0.9rem; opacity: 0.8;">
            <p><strong>Legal Disclaimer:</strong> The information on this website is for general information purposes only and is not a substitute for professional legal advice. Reading this information does not create an attorney-client relationship.</p>
        </div>
    </div>
</section>

{# Category Filter JavaScript #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.category-filter-btn');
    const posts = document.querySelectorAll('.blog-post');

    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const category = this.dataset.category;

            // Update active button
            filterButtons.forEach(btn => {
                btn.classList.remove('active');
                const btnCategory = btn.dataset.category;
                const colors = {
                    'all': 'var(--primary-blue)',
                    'community': '#28a745',
                    'legal': 'var(--primary-blue)',
                    'michigan': '#6f42c1',
                    'case': '#fd7e14'
                };
                btn.style.background = 'transparent';
                btn.style.color = colors[btnCategory];
            });

            this.classList.add('active');
            const activeColor = this.style.borderColor;
            this.style.background = activeColor;
            this.style.color = 'white';

            // Filter posts
            posts.forEach(post => {
                const postCategory = post.dataset.category;
                if (category === 'all' || postCategory === category) {
                    post.style.display = 'block';
                } else {
                    post.style.display = 'none';
                }
            });
        });
    });
});
</script>
